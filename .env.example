# Site Config
SITE_URL=https://splatoon3.ink

# Load data from Splatoon3.ink during development
VITE_DATA_FROM=https://splatoon3.ink

# Nintendo API
NINTENDO_TOKEN=

# nxapi client authentication (https://nxapi-auth.fancy.org.uk/oauth/clients)
NXAPI_CLIENT_ID=
NXAPI_SHARED_SECRET=

# User agent string
USER_AGENT=

# Sentry
SENTRY_DSN=

# Archive all data (can use a lot of disk space)
ARCHIVE_DATA=false

# Browserless (for screenshots)
BROWSERLESS_ENDPOINT=ws://localhost:3000
SCREENSHOT_HOST=host.docker.internal
BROWSERLESS_CONCURRENT=2

# S3 parameters
